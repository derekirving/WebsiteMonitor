<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="WebsiteMonitor.NotificationWindow"
        Title="Notification"
        Width="350" Height="120"
        WindowStartupLocation="Manual"
        SystemDecorations="None"
        Background="#2C2C2C"
        CanResize="False"
        ShowInTaskbar="False"
        Topmost="True">
    
    <Border BorderBrush="#DC3545" BorderThickness="2" CornerRadius="5" Padding="15">
        <StackPanel Spacing="10">
            <TextBlock x:Name="TitleText" 
                       FontWeight="Bold" 
                       FontSize="14" 
                       Foreground="White"/>
            <TextBlock x:Name="MessageText" 
                       FontSize="12" 
                       Foreground="#E0E0E0"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Border>
</Window>